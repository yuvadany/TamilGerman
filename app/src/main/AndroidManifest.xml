<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.englishbible.tamilbible">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.englishbible.tamilbible.QuotesActivity"></activity>
        <activity android:name="com.englishbible.tamilbible.TamilPraiseActivity" />
        <activity android:name="com.englishbible.tamilbible.SettingsActivity" />
        <activity android:name="com.englishbible.tamilbible.BookmarkActivity" />
        <activity
            android:name="com.englishbible.tamilbible.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.englishbible.tamilbible.PraisesActivity" />
        <activity android:name="com.englishbible.tamilbible.LyricsActivity" />
        <activity android:name="com.englishbible.tamilbible.SongsActivity" />
    </application>

</manifest>